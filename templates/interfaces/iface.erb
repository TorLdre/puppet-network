# File Managed by Puppet
# Interface <%= @name %>
<% if @description and ! @description.empty? -%>
# <%= @description %>
<% end -%>
<% if @auto -%>
auto <%= @interface %>
<% end -%>
<% if @allow_hotplug -%>
allow-hotplug <%= @interface %>
<% end -%>
<%= @stanza %> <%= @interface %> <%= @family %> <%= @method %>
<% @config.each_pair do |key, value| -%>
<% values = value.is_a?(Array) ? value : [value] -%>
<% values.each do |val| -%>
<%= "\t#{key} #{val}" %>
<% end -%><% end -%>
